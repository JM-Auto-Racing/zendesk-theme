    </symbol>

    <symbol id="General" class="icon icon-tabler icon-tabler-search" width="80" height="80" viewBox="0 0 24 24" stroke-width="1.5" stroke="#f2f2f2" fill="none" stroke-linecap="round" stroke-linejoin="round">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
